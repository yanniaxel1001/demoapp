{% extends 'base.html.twig' %}

{% block tittle %}Registrate {% endblock %}


{% block body %}
    <div class="container p-5">
        <h1 class="text-center">TiendaFes</h1>
        <div class="d-flex justify-content-center">
            <form class="col-md-6 col-lg-4 bg-body-secondary m-5 p-3" method="post" action="{{ path('registrar') }}">
                <h1 class="text-center">Registrate</h1>
                <div class="row">
                    <div class="col-md-6">
                    <label for="nombre">Nombre(s):</label>
                    <input class="form-control" type="text" id="nombre" name="nombre" required>
                </div>
                
                <div class="col-md-6">
                    <label for="apellido">Apellidos:</label>
                    <input class="form-control" type="text" id="apellido" name="apellido" required>
                </div>
                </div>

                <div class="">
                    <label for="username">Nombre de usuario:</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                </div>
                
                <div class="">
                    <label for="email">Correo electrónico:</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                </div>
                
                <div class="">
                    <label for="password">Contraseña:</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                </div>
                
                <div class="">
                    <label for="confirm_password">Confirmar contraseña:</label>
                    <input class="form-control" type="password" id="confirm_password" name="confirm_password" required>
                </div>
                
                <div class="text-center p-3">
                    <button class="btn btn-primary p-3" type="submit">Registrarse</button>
                </div>
                <hr>
                <div class="text-center">
                    <a class="p-3 text-center" href="{{ path('login')}}">Tengo una cuenta</a>
                </div>
            </form>
        </div>
    </div>
    <footer class="bg-black text-white p-3">
        <div class="row">
            <div class="col-2">
                <Address>TiendaFes</Address>
                <p>Yanni Axel</p>
            </div>
            <div class="col-10">
                <a class="text-white" href="">Home</a><br>
                <a class="text-white" href="">About</a><br>
                <a class="text-white" href="">Contact</a><br>
                <a class="text-white" href="">FAQ</a><br>
            </div>
        </div>
    </footer>
{% endblock %}